<tbody>
	<tr>
		<td data-th="Product">
			<div class="row">
				<!-- <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div> -->
				<div class="col-sm-10">
					<h4 class="nomargin">
						<%= order.product.title %>
					</h4>
					<p><%= order.product.description%></p>
				</div>
			</div>
		</td>
		<td data-th="Price">
			<%= order.product.price %>
		</td>
		<td data-th="Quantity">
			<input type="number" class="form-control text-center" value='<%= order.quanlity %>'>
		</td>
		<td data-th="Subtotal" class="text-center"> <%=order.product.price*order.quanlity %></td>
		<td class="actions" data-th="">
			<button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
			<a href='<%=order_path(order.id)%>' class='btn btn-danger btn-sm' data-confirm="Are you sure?" data-method="delete"><i class="fa fa-trash-o"></i></a>
		</td>
	</tr>
</tbody>
