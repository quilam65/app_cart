<h2>Histories</h2>
<table class="table">
  <thead>
    <tr>
      <th>Payment ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Total</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
    <tr>
        <td><a href="/histories/<%= cart.id %>"><%=cart.payment_id%></a></td>
        <td><%=cart.name%></td>
        <td><%=cart.address%></td>
        <td>
          <% if !cart.finished %>
            Handing
          <% else %>
            Finished
          <% end %>
        </td>
        <td>$ <%=cart.total_amount_cents %></td>
        <td><%=cart.created_at%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="row">
  <%= paginate @carts, :theme => 'twitter-bootstrap-3'%>
</div>
